<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger [%ndc] - %message%newline"/>
    </layout>
  </appender>
  <appender name="BasicAppender" type="log4net.Appender.RollingFileAppender">
    <file value="Logging\CompleteLog.txt"/>
    <appendToFile value="true"/>
    <rollingStyle value="Size"/>
    <maxSizeRollBackups value="2"/>
    <maximumFileSize value="1000KB"/>
    <staticLogFileName value="true"/>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %level %logger - %message %newline"/>
    </layout>

  </appender>
  <appender name="MultiThreadAppender" type="log4net.Appender.RollingFileAppender">
    <file value="Logging\PersistLog.txt"/>
    <appendToFile value="true"/>
    <rollingStyle value="Size"/>
    <maxSizeRollBackups value="0"/>
    <maximumFileSize value="1000KB"/>
    <staticLogFileName value="true"/>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %level %logger [%thread] - %message %newline"/>
    </layout>
    <filter type="log4net.Filter.LoggerMatchFilter">
      <stringToMatch loggerToMatch="KerLogClient.FlightsManager.TCPManager"/>
    </filter>
    <filter type="log4net.Filter.DenyAllFilter" />
  </appender>
  <appender name="SpecialAppender" type="log4net.Appender.RollingFileAppender">
    <file value="Logging\log.txt"/>
    <appendToFile value="true"/>
    <rollingStyle value="Size"/>
    <maxSizeRollBackups value="2"/>
    <maximumFileSize value="1000KB"/>
    <staticLogFileName value="true"/>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %level %logger - %message %newline"/>
    </layout>
  
    <filter type="log4net.Filter.StringMatchFilter">
    <stringToMatch value="AscendUpdate" />
</filter>
    
      <filter type="log4net.Filter.LoggerMatchFilter">
      <stringToMatch loggerToMatch="KerLogClient.Configuration.Configuration"/>
      <stringToMatch loggerToMatch="KerLogClient.FlightsManager.Manager"/>
        <stringToMatch loggerToMatch="KerLogClient.FlightsManager.DatabaseManager"/>
        <stringToMatch loggerToMatch="KerLogClient.FlightListener.MenuSpy"/>
</filter>
    <filter type="log4net.Filter.LevelRangeFilter">
    <levelMin value="INFO" />
    <levelMax value="FATAL" />
</filter>
    <filter type="log4net.Filter.DenyAllFilter" />
  
  </appender>
  <root>
    <level value="DEBUG"/>
    <appender-ref ref="SpecialAppender"/>
    <appender-ref ref="BasicAppender"/>
    <appender-ref ref="MultiThreadAppender"/>
  </root>
</log4net>
